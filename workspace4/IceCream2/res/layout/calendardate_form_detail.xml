<?xml version="1.0" encoding="UTF-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
         android:id="@+id/calendardate_detail_layout"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical">
        <TextView
             android:id="@+id/calendardate_detail_calendardate_descriptor"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/calendardate_detail_calendardate_descriptor"
             style="@style/calendardate_detail_calendardate_descriptor_style" />
        <DatePicker
             android:id="@+id/calendardate_detail_calendardate_value"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             style="@style/calendardate_detail_calendardate_value_style"
             android:clickable="false" />
    </LinearLayout>
</merge>
