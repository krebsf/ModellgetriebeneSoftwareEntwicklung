<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:fillViewport="true">
    <RelativeLayout
         android:id="@+id/training_detail_layout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
        <RelativeLayout
             android:id="@+id/project_view_detail"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
            <include
                 layout="@layout/project_form_detail" />
        </RelativeLayout>
        <RelativeLayout
             android:id="@+id/training_view_detail"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/project_view_detail">
            <include
                 layout="@layout/training_form_detail" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
