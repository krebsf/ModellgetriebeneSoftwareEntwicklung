<?xml version="1.0" encoding="UTF-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
         android:id="@+id/project_insertupdate_layout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
        <LinearLayout
             android:id="@+id/project_insertupdate_name"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
            <TextView
                 android:id="@+id/project_insertupdate_name_descriptor"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/project_insertupdate_name_descriptor"
                 style="@style/project_insertupdate_name_descriptor_style" />
            <EditText
                 android:id="@+id/project_insertupdate_name_value"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
             android:id="@+id/project_insertupdate_months"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_below="@+id/project_insertupdate_name">
            <TextView
                 android:id="@+id/project_insertupdate_months_descriptor"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/project_insertupdate_months_descriptor"
                 style="@style/project_insertupdate_months_descriptor_style" />
            <EditText
                 android:id="@+id/project_insertupdate_months_value"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:inputType="number" />
        </LinearLayout>
        <LinearLayout
             android:id="@+id/project_insertupdate_size"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_below="@+id/project_insertupdate_months">
            <TextView
                 android:id="@+id/project_insertupdate_size_descriptor"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/project_insertupdate_size_descriptor"
                 style="@style/project_insertupdate_size_descriptor_style" />
            <Spinner
                 android:id="@+id/project_insertupdate_size_value"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:entries="@array/projectsize"
                 android:prompt="@string/project_insertupdate_size_descriptor" />
        </LinearLayout>
        <LinearLayout
             android:id="@+id/project_insertupdate_status"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_below="@+id/project_insertupdate_size">
            <TextView
                 android:id="@+id/project_insertupdate_status_descriptor"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/project_insertupdate_status_descriptor"
                 style="@style/project_insertupdate_status_descriptor_style" />
            <Spinner
                 android:id="@+id/project_insertupdate_status_value"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:entries="@array/projectstatus"
                 android:prompt="@string/project_insertupdate_status_descriptor" />
        </LinearLayout>
    </RelativeLayout>
</merge>
