<?xml version="1.0" encoding="UTF-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
         android:id="@+id/project_detail_layout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
        <LinearLayout
             android:id="@+id/project_detail_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
            <TextView
                 android:id="@+id/project_detail_name_descriptor"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/project_detail_name_descriptor"
                 style="@style/project_detail_name_descriptor_style" />
            <TextView
                 android:id="@+id/project_detail_name_value"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 style="@style/project_detail_name_value_style" />
        </LinearLayout>
        <LinearLayout
             android:id="@+id/project_detail_size"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_below="@+id/project_detail_name">
            <TextView
                 android:id="@+id/project_detail_size_descriptor"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/project_detail_size_descriptor"
                 style="@style/project_detail_size_descriptor_style" />
            <TextView
                 android:id="@+id/project_detail_size_value"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 style="@style/project_detail_size_value_style" />
        </LinearLayout>
        <LinearLayout
             android:id="@+id/project_detail_status"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_below="@+id/project_detail_size">
            <TextView
                 android:id="@+id/project_detail_status_descriptor"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/project_detail_status_descriptor"
                 style="@style/project_detail_status_descriptor_style" />
            <TextView
                 android:id="@+id/project_detail_status_value"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 style="@style/project_detail_status_value_style" />
        </LinearLayout>
        <LinearLayout
             android:id="@+id/project_detail_months"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_below="@+id/project_detail_status">
            <TextView
                 android:id="@+id/project_detail_months_descriptor"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/project_detail_months_descriptor"
                 style="@style/project_detail_months_descriptor_style" />
            <TextView
                 android:id="@+id/project_detail_months_value"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 style="@style/project_detail_months_value_style" />
        </LinearLayout>
    </RelativeLayout>
</merge>
